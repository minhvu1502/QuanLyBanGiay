<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css" media="all" />
    <!--[if lte IE 6]><style type="text/css" media="screen">.tabbed { height:420px; }</style><![endif]-->
    <script src="~/Content/js/jquery-1.4.1.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.jcarousel.pack.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.slide.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery-func.js" type="text/javascript"></script>
    <style>
        #navigation ul li a {
            font-size: 20px;
            font-family: 'Lobster', cursive;
            color: red;
            font-weight: bold
        }
    </style>
</head>
<body>
    <!-- Top -->
    <div id="top">
        <div class="shell">
            <!-- Header -->
            <div id="header">
                <h1 id="logo"><a href="#">Urgan Gear</a></h1>
                <div id="navigation">
                    <ul>
                        <li><a href="@Url.Action("GetProductBySex", "Product", new {@Sex = "Nam"})">Giày Nam</a></li>
                        <li><a href="@Url.Action("GetProductBySex", "Product", new {@Sex = "Nu"})">Giày Nữ</a></li>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="#">Support</a></li>
                        <li><a href="#">My Account</a></li>
                        <li><a href="#">Sign In</a></li>
                        <li><a href="#">Sign Up</a></li>
                    </ul>
                </div>
            </div>
            <!-- End Header -->
            <!-- Slider -->
            <div id="slider">
                <div id="slider-holder">
                    <ul>
                        <li><a href="#"><img src="~/Content/css/images/slide1.jpg" alt="" /></a></li>
                        <li><a href="#"><img src="~/Content/css/images/slide2.jpg" alt="" /></a></li>
                        <li><a href="#"><img src="~/Content/css/images/slide1.jpg" alt="" /></a></li>
                        <li><a href="#"><img src="~/Content/css/images/slide2.jpg" alt="" /></a></li>
                        <li><a href="#"><img src="~/Content/css/images/slide1.jpg" alt="" /></a></li>
                        <li><a href="#"><img src="~/Content/css/images/slide2.jpg" alt="" /></a></li>
                    </ul>
                </div>
                <div id="slider-nav"> <a href="#" class="prev">Previous</a> <a href="#" class="next">Next</a> </div>
            </div>
            <!-- End Slider -->
        </div>
    </div>
    <!-- Top -->
    <!-- Main -->
    <div id="main">
        <div class="shell">
            <!-- Search, etc -->
            <div class="options">
                <div class="search">
                    <form action="#" method="post">
                        <span class="field">
                            <input type="text" class="blink" value="SEARCH" title="SEARCH" />
                        </span>
                        <input type="text" class="search-submit" value="GO" />
                    </form>
                </div>
                <span class="left"><a href="#">Advanced Search</a></span>
                <div class="right"> <span class="cart"> <a href="#" class="cart-ico">&nbsp;</a> <strong>$0.00</strong> </span> <span class="left more-links"> <a href="#">Checkout</a> <a href="#">Details</a> </span> </div>
            </div>
            <!-- End Search, etc -->
            @RenderBody()
        </div>
        <hr />
        <!-- Brands -->
        <div class="brands">
            <h3>Brands</h3>
            <div class="logos"> <a href="#"><img src="~/Content/css/images/logo1.gif" alt="" /></a> <a href="#"><img src="~/Content/css/images/logo2.gif" alt="" /></a> <a href="#"><img src="~/Content/css/images/logo3.gif" alt="" /></a> <a href="#"><img src="~/Content/css/images/logo4.gif" alt="" /></a> <a href="#"><img src="~/Content/css/images/logo5.gif" alt="" /></a> </div>
        </div>
        <!-- End Brands -->
        <!-- Footer -->
        <div id="footer">
            <div class="left"> <a href="#">Home</a> <span>|</span> <a href="#">Support</a> <span>|</span> <a href="#">My Account</a> <span>|</span> <a href="#">The Store</a> <span>|</span> <a href="#">Contact</a> </div>
            <div class="right"> &copy; Sitename.com. Design by <a href="http://chocotemplates.com">ChocoTemplates.com</a> </div>
        </div>
        <!-- End Footer -->
    </div>
    <!-- End Main -->
@*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
